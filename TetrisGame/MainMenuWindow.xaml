<Window x:Name="MainMenuwindow" x:Class="TetrisGame.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisGame"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="300" ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="80,50,0,0" VerticalAlignment="Top" Width="125" Height="40" FontSize="18" FontFamily="Sigmar One" Click="StartButton_Click"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Left" Margin="80,280,0,0" VerticalAlignment="Top" Width="125" Height="40" FontFamily="Sigmar One" FontSize="18" Click="ExitButton_Click"/>

    </Grid>
</Window>
